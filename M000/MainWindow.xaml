<Window x:Class="M000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M000"
        mc:Ignorable="d"
        Title="MainWindow"
		Width="400"
		SizeToContent="Height"
		FontSize="18">
	<Window.Background>
		<LinearGradientBrush>
			<LinearGradientBrush.GradientStops>
				<GradientStop Color="Aqua" Offset="0"></GradientStop>
				<GradientStop Color="Green" Offset="1"></GradientStop>
			</LinearGradientBrush.GradientStops>
		</LinearGradientBrush>
	</Window.Background>
	<StackPanel Margin="10">
		<UniformGrid Columns="2" Margin="0, 0, 0, 5">
			<TextBlock Text="Vorname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 0, 0, 5">
			<TextBlock Text="Nachname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 0, 0, 5">
			<TextBlock Text="Geburtsdatum: "/>
			<DatePicker/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 0, 0, 5">
			<TextBlock Text="Verheiratet: "/>
			<CheckBox VerticalAlignment="Center"/>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 0, 0, 5">
			<TextBlock Text="Lieblingsfarbe: "/>
			<ComboBox>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
			</ComboBox>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="0, 0, 0, 5">
			<TextBlock Text="Lieblingsfarbe: "/>
			<StackPanel>
				<RadioButton GroupName="G" Content="M"/>
				<RadioButton GroupName="G" Content="W"/>
				<RadioButton GroupName="G" Content="D"/>
			</StackPanel>
		</UniformGrid>
		<Grid Margin="0, 0, 0, 5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50"/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Content="OK" Grid.Column="1" Margin="0, 0, 5, 0"/>
			<Button Content="Abbrechen" Grid.Column="2" Margin="5, 0, 0, 0"/>
		</Grid>
	</StackPanel>
</Window>
